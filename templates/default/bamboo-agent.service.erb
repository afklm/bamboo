[Unit]
Description=Atlassian Bamboo Agent
After=syslog.target network.target

[Service]
Type=forking
User=<%= @user %>
Group=<%= @group %>
ExecPreStart=/usr/bin/systemctl set-environment PATH=<%= @additional_path %>:$PATH
ExecStart=<%= @data_dir %>/bin/bamboo-agent.sh start
ExecStop=<%= @data_dir %>/bin/bamboo-agent.sh stop

[Install]
WantedBy=multi-user.target
