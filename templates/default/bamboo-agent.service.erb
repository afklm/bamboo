[Unit]
Description=Atlassian Bamboo Agent
After=syslog.target network.target

[Service]
Type=forking
User=<%= @user %>
Group=<%= @group %>
Environment=PATH=<%= node[:bamboo][:agent][:additional_path] %>:$JAVA_HOME/bin:$PATH
ExecStart=<%= @data_dir %>/bin/bamboo-agent.sh start
ExecStop=<%= @data_dir %>/bin/bamboo-agent.sh stop

[Install]
WantedBy=multi-user.target
