[Unit]
Description=Atlassian Bamboo Agent
After=syslog.target network.target

[Service]
Type=forking
User=<%= node[:bamboo][:agent][:user] %>
Group=<%= node[:bamboo][:agent][:group] %>
ExecStart=<%= node[:bamboo][:agent][:data_dir] %>/bin/bamboo-agent.sh start
ExecStop=<%= node[:bamboo][:agent][:data_dir] %>/bin/bamboo-agent.sh stop

[Install]
WantedBy=multi-user.target
